<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Numeric Text Box -->
    <style name="numericTextBox">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:background">@drawable/ng_text_box_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
    </style>

    <!-- Numeric Key -->
    <style name="numericKey">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/ng_numeric_key_background</item>
        <item name="android:layout_margin">3px</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Multiline Text Box -->
    <style name="multilineText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_4ssp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Error Text -->
    <style name="errorText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_2ssp</item>
        <item name="android:textColor">@color/red</item>
    </style>


</resources>