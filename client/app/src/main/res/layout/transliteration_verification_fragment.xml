<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/microtaskTb"
        layout="@layout/microtask_header_2" />

    <TextView
        android:id="@+id/instructionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        tools:text="Mark if each word is correct transliteration of the following word"
        android:textColor="#606060"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/microtaskTb" />

    <TextView
        android:id="@+id/wordTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextTvStyle"
        android:paddingVertical="@dimen/_10sdp"
        android:text="HOWDY"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintTop_toBottomOf="@id/instructionTv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/verificationRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="@id/wordTv"
        app:layout_constraintRight_toRightOf="@id/wordTv"
        app:layout_constraintTop_toBottomOf="@id/wordTv"
        tools:itemCount="4"
        tools:listitem="@layout/item_transliteration_verification"
        app:layout_constraintBottom_toBottomOf="parent">


    </androidx.recyclerview.widget.RecyclerView>
    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/ic_next_enabled"
        android:contentDescription="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>